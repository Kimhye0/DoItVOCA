<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.sample_result.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_topbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff">

        <!--<ImageButton
            android:id="@+id/rl_ib_backbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:src="@drawable/backbutton_24dp" />-->

        <ImageButton
            android:id="@+id/rl_ib_homebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            android:onClick="returnTop"
            android:src="@drawable/home_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="hyunjinë‹˜!"
            android:textColor="#000000"
            android:textSize="20dp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_countLabel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/rl_topbar"
        android:background="#e0e0e0"
        >
        <TextView
            android:id="@+id/countLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q1"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>



    <Button
        android:id="@+id/answerBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answerBtn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ecd0fc"
        android:onClick="checkAnswer"
        android:text="Button" />

    <Button
        android:id="@+id/answerBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answerBtn3"
        android:layout_centerHorizontal="true"
        android:onClick="checkAnswer"
        android:layout_marginTop="15dp"
        android:background="#ecd0fc"
        android:text="Button" />

    <Button
        android:id="@+id/answerBtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answerBtn4"
        android:layout_centerHorizontal="true"
        android:onClick="checkAnswer"
        android:layout_marginTop="15dp"
        android:background="#ecd0fc"
        android:text="Button" />

    <Button
        android:id="@+id/answerBtn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="checkAnswer"
        android:layout_marginTop="15dp"
        android:background="#ecd0fc"
        android:text="Button" />

    <TextView
        android:id="@+id/questionLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/answerBtn1"
        android:layout_below="@+id/rl_countLabel"
        android:layout_centerHorizontal="true"
        android:background="#fcd1dd"
        android:gravity="center"
        android:paddingTop="20sp"
        android:text="Question"
        android:textSize="22sp" />

</RelativeLayout>