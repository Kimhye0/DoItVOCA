<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="#3F51B5"
        android:id="@+id/rl_topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hyunjin님!"
            android:layout_marginLeft="30dp"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            />

        <ImageButton
            android:id="@+id/rl_ib_homebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:onClick="returnTop"
            android:background="@drawable/home_24dp" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/EnglishInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="영단어를 입력해주세요"
                    android:keyboardNavigationCluster="false"
                    android:privateImeOptions="defaultInputmode=english"
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <EditText

                    android:id="@+id/MeaningInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="뜻을 입력해주세요"
                    android:privateImeOptions="defaultInputmode=korean"
                    android:textAlignment="center"
                    android:textSize="20dp" />


            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/AddWord_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_default"
            android:text="추가"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
